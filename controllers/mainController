
angular.module('myApp',[])
    .controller('langController',['$scope', function($scope) {


        $scope.lang = "UA";
        $scope.sayHello = function (lang) {
            if(lang)
                $scope.lang = lang;
            if($scope.lang == "UA"){
                $scope.description = "Hello world!";
            }
            else {
                $scope.description = "bye world!";
            }


            console.log("aaa");


        };



        $scope.sayHello();



    }]);